<script>
    // setup 
    $(document).ready(function () {
        $.ajax({
            url: '/admin/getChartDetails',
            method: 'get',
            success: async (chartDatas) => {
                data1 = []
                console.log("jjjj",chartDatas)

                chartDatas.dailyIncome.map((value) => {
                    data1.push({ x: value._id, y: value.totalAmount })
                })

                const data = {
                    labels: chartDatas.daysOfWeek,
                    datasets: [{
                        label: 'Weekly Sales',
                        data: data1,
                        backgroundColor: [
                            'rgb(60, 60, 60)',


                        ],
                        borderColor: [
                            'red'
                        ],
                        borderWidth: 2
                    }]
                };

                // config 
                const config = {
                    type: 'bar',
                    data,
                    options: {
                        scales: {
                            x: {
                                type: 'time',
                                time: {
                                    unit: 'day'
                                }
                            },
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                };

                // render init block
                const myChart = new Chart(
                    document.getElementById('myChart'),
                    config
                );
            }
        })
    })

    $(document).ready(function () {
        $.ajax({
            url: '/admin/getChartDetails',
            method: 'get',
            success: (response) => {
                let data2 = []
                response.yearlyIncome.map((value) => {
                    data2.push({ x: value._id, y: value.total })
                })
                const ctx = document.getElementById('myChart2').getContext('2d');
                const myChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        datasets: [{
                            label: 'Yearly Sales Report',
                            data: data2,
                            backgroundColor: [
                                'rgba(167, 15, 93, 0.8)'
                            ],
                            borderColor: [
